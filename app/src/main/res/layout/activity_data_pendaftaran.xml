<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context=".DataPendaftaranActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_gravity="end"
                    android:id="@+id/btnEdit"
                    android:text="Ubah Data"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:background="@color/colorbg"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="No Pendaftaran"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/noPendaftaran"
                        android:text="no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="NISN"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/nisn"
                        android:text="nisn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Nama Lengkap"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/nama"
                        android:hint="NAMA LENGKAP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Tempat Lahir"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tmpLahir"
                        android:hint="TEMPAT LAHIR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Tanggal Lahir"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tglLahir"
                        android:hint="TEMPAT LAHIR (yyyy-mm-dd)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Jenis Kelamin"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/jk"
                        android:hint="Laki Laki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Telepon"
                        android:inputType="phone"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/telepon"
                        android:hint="TELEPON"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Alamat"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/alamat"
                        android:hint="ALAMAT"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Sekolah Asal"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/sekolahasal"
                        android:hint="SEKOLAH ASAL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Tahun Lulus"
                        android:inputType="number"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tahunLulus"
                        android:hint="TAHUN LULUS"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>



                <TextView
                    android:text="NILAI UN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="MTK"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/nmtk"
                        android:hint="MTK"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Bahasa Indonesia"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/nbindo"
                        android:hint="B. Indo"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="B.Inggris"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/nbing"
                        android:hint="B.Ing"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Rata-rata"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/avg"
                        android:hint="Rata-Rata"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                 </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:hint="Nama Ayah"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/nmayah"
                        android:hint="NAMA AYAH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:hint="Nama Ibu"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/nmibu"
                        android:hint="NAMA IBU"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:hint="Jurusan"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/jurusan"
                        android:hint="JURUSAN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>