<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtNamaSekolah"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="SMKN 1 Palembayan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgSekolah"
            android:layout_below="@id/txtNamaSekolah"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/sekolah"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="150dp" />

        <TextView
            android:layout_below="@+id/imgSekolah"
            android:layout_marginTop="20dp"
            android:id="@+id/Npsp"
            android:text="NPSN"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/Npsp"
            android:layout_below="@id/imgSekolah"
            android:layout_marginTop="20dp"
            android:id="@+id/txtNpsn"
            android:textStyle="bold"
            android:text="NPSN"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtNpsn"
            android:id="@+id/alamat"
            android:text="Alamat"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/Npsp"
            android:layout_below="@id/txtNpsn"
            android:id="@+id/txtAlamat"
            android:textStyle="bold"
            android:text="NPSN"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtAlamat"
            android:id="@+id/kodepos"
            android:text="Kode Pos"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/kodepos"
            android:layout_below="@id/txtAlamat"
            android:id="@+id/txtKodepos"
            android:textStyle="bold"
            android:text="NPSN"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtKodepos"
            android:id="@+id/desa"
            android:text="Desa/Kelurahan"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/desa"
            android:layout_below="@id/txtKodepos"
            android:id="@+id/txtdesa"
            android:textStyle="bold"
            android:text="NPSN"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtdesa"
            android:id="@+id/kec"
            android:text="Kecamatan"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/kec"
            android:layout_below="@id/txtdesa"
            android:id="@+id/txtKec"
            android:textStyle="bold"
            android:text="NPSN"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtKec"
            android:id="@+id/kab"
            android:text="Kabupaten/Kota"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/kab"
            android:layout_below="@id/txtKec"
            android:id="@+id/txtKab"
            android:textStyle="bold"
            android:text="NPSN"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/txtKab"
            android:id="@+id/prov"
            android:text="Provinsi"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/kab"
            android:layout_below="@id/txtKab"
            android:id="@+id/txtprov"
            android:textStyle="bold"
            android:text="NPSN"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>